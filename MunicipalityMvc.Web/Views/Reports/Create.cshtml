@{
    ViewData["Title"] = "Report an Issue";
    var categories = ViewBag.Categories as string[] ?? Array.Empty<string>();
}

<div class="container py-4">
    <h2 class="mb-3">Report an Issue</h2>
    <p class="text-muted">Provide details about the issue. Attach images or documents if available.</p>

    <div class="card shadow-sm mt-3">
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data" class="mt-1" id="report-form">
                <div class="row g-3">
                    <div class="col-12 col-md-6">
                        <label for="firstName" class="form-label">First name (optional)</label>
                        <input id="firstName" name="firstName" class="form-control" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="lastName" class="form-label">Last name (optional)</label>
                        <input id="lastName" name="lastName" class="form-control" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="email" class="form-label">Email (optional)</label>
                        <input id="email" name="email" type="email" class="form-control" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="phone" class="form-label">Phone (optional)</label>
                        <input id="phone" name="phone" type="tel" class="form-control" />
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-check form-switch mt-4">
                            <input class="form-check-input" type="checkbox" id="wantsEmailUpdates" name="wantsEmailUpdates">
                            <label class="form-check-label" for="wantsEmailUpdates">Allow email updates</label>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-check form-switch mt-4">
                            <input class="form-check-input" type="checkbox" id="wantsSmsUpdates" name="wantsSmsUpdates">
                            <label class="form-check-label" for="wantsSmsUpdates">Allow SMS updates</label>
                        </div>
                    </div>
                    <div class="col-12">
                        <label for="location" class="form-label">Location</label>
                        <input id="location" name="location" class="form-control" required />
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="category" class="form-label">Category</label>
                        <select id="category" name="category" class="form-select">
                            @foreach (var c in categories)
                            {
                                <option value="@c">@c</option>
                            }
                        </select>
                    </div>
                    <div class="col-12">
                        <label for="description" class="form-label">Description</label>
                        <textarea id="description" name="description" class="form-control" rows="6" required></textarea>
                    </div>
                    <div class="col-12">
                        <label for="attachments" class="form-label">Attachments</label>
                        <input id="attachments" name="attachments" type="file" class="form-control" multiple />
                        <div class="form-text">You can select multiple files.</div>
                    </div>
                </div>

                <div class="d-flex flex-wrap align-items-center gap-3 mt-4">
                    <button type="submit" class="btn btn-primary flex-shrink-0" id="submitBtn">
                        <span class="spinner-border spinner-border-sm me-2 d-none" id="submitSpinner" role="status" aria-hidden="true"></span>
                        Submit
                    </button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-link">Back to Main Menu</a>
                </div>

                <div class="progress mt-3 d-none" id="submitProgress" style="height: 8px;">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" style="width: 0%"></div>
                </div>
            </form>
        </div>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">Please correct the errors and try again.</div>
    }
</div>

<script>
    (function () {
        const form = document.getElementById('report-form');
        const progress = document.getElementById('submitProgress');
        const bar = progress.querySelector('.progress-bar');
        const btn = document.getElementById('submitBtn');
        const spinner = document.getElementById('submitSpinner');

        form.addEventListener('submit', function (e) {
            // Show animated progress bar during a short staged delay and cycle encouragement messages
            progress.classList.remove('d-none');
            spinner.classList.remove('d-none');
            btn.setAttribute('disabled', 'disabled');

            const messages = [
                'Packing your report…',
                'Adding your attachments…',
                'Securing your submission…',
                'Saving to the queue…',
                'Almost there…'
            ];
            let idx = 0;
            let pct = 0;

            const msgToast = window.showToast ? (m) => window.showToast(m, 'text-bg-primary') : null;
            if (msgToast) msgToast(messages[idx]);

            const msgTimer = setInterval(() => {
                idx = (idx + 1) % messages.length;
                if (msgToast) msgToast(messages[idx]);
            }, 1000);

            const progTimer = setInterval(() => {
                pct = Math.min(98, pct + 4);
                bar.style.width = pct + '%';
            }, 100);

            // Delay real submission slightly so users see progress/messages
            e.preventDefault();
            setTimeout(() => {
                clearInterval(msgTimer);
                clearInterval(progTimer);
                bar.style.width = '100%';
                form.submit();
            }, 2500);

            // If user navigates away early
            window.addEventListener('beforeunload', () => {
                clearInterval(msgTimer);
                clearInterval(progTimer);
            });
        });
    })();
</script>



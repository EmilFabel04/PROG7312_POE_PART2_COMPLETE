@{
    ViewData["Title"] = "Municipal Services";
}

<div class="container py-5">
    <div class="p-4 p-md-5 mb-4 bg-light rounded-3 shadow-sm">
        <div class="container-fluid py-2">
            <div class="d-flex align-items-center gap-3 mb-2">
                <img src="~/images/logo.png" alt="Logo" width="48" height="48" class="rounded-1" style="object-fit: cover;" />
                <h1 class="display-6 fw-semibold mb-0">Citizen Engagement Portal</h1>
            </div>
            <p class="col-12 col-md-8 fs-5">Report municipal issues quickly, track progress, and help us improve your community.</p>
            <div class="d-flex flex-wrap gap-2 mt-2">
                <a class="btn btn-primary btn-lg" asp-controller="Reports" asp-action="Create">Report an Issue</a>
                <a class="btn btn-outline-primary btn-lg" asp-controller="Events" asp-action="Index">Events & Announcements</a>
                <a class="btn btn-outline-success btn-lg" asp-controller="ServiceStatus" asp-action="Index">Requested Services</a>
            </div>
        </div>
    </div>

    <h3 class="mb-3">All Links</h3>
    <div class="row g-4">
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card h-100 shadow-sm border-primary">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Report Issues</h5>
                    <p class="card-text flex-grow-1">Log sanitation, roads, utilities, parks, and safety issues.</p>
                    <a class="btn btn-primary mt-2" asp-controller="Reports" asp-action="Create">Open</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">View All Reports</h5>
                    <p class="card-text flex-grow-1">See the queue and check your ticket position.</p>
                    <a class="btn btn-outline-secondary mt-2" asp-controller="Reports" asp-action="Index">Open (secondary)</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card h-100 shadow-sm border-info">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-info">Local Events & Announcements</h5>
                    <p class="card-text flex-grow-1">Stay updated on community events and important announcements.</p>
                    <a class="btn btn-info mt-2" asp-controller="Events" asp-action="Index">View Events</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-3">
            <div class="card h-100 shadow-sm border-success">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-success">Service Request Status</h5>
                    <p class="card-text flex-grow-1">Track service requests and view priority queue.</p>
                    <div class="d-flex gap-2">
                        <a class="btn btn-success mt-2" asp-controller="ServiceStatus" asp-action="Index">View Status</a>
                        <a class="btn btn-outline-success mt-2" asp-controller="ServiceStatus" asp-action="Priority">Priority</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="alert alert-info mt-4" role="alert">
        You're making a difference. Thank you for helping improve our city!
    </div>
</div>

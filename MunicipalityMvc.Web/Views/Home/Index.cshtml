@{
    ViewData["Title"] = "Municipal Services";
}

<div class="container py-5">
    <h1 class="mb-4">Citizen Engagement Portal</h1>
    <p class="lead">Choose a task below. Only "Report Issues" is enabled for Part 1.</p>

    <div class="row g-3 mt-3">
        <div class="col-12 col-md-6 col-lg-4">
            <a class="btn btn-primary w-100 py-3" asp-controller="Reports" asp-action="Create">Report Issues</a>
        </div>
        <div class="col-12 col-md-6 col-lg-4">
            <button class="btn btn-outline-secondary w-100 py-3" disabled>Local Events &amp; Announcements (Later)</button>
        </div>
        <div class="col-12 col-md-6 col-lg-4">
            <button class="btn btn-outline-secondary w-100 py-3" disabled>Service Request Status (Later)</button>
        </div>
    </div>

    <div class="alert alert-info mt-4" role="alert">
        You're making a difference. Thank you for helping improve our city!
    </div>
</div>

@{
    ViewData["Title"] = "Municipal Services";
}

<div class="container py-5">
    <div class="p-4 p-md-5 mb-4 bg-light rounded-3 shadow-sm">
        <div class="container-fluid py-2">
            <h1 class="display-6 fw-semibold">Citizen Engagement Portal</h1>
            <p class="col-12 col-md-8 fs-5">Report municipal issues quickly, track progress, and help us improve your community.</p>
            <a class="btn btn-primary btn-lg mt-2" asp-controller="Reports" asp-action="Create">Report an Issue</a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card h-100 shadow-sm border-primary">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Report Issues</h5>
                    <p class="card-text flex-grow-1">Log sanitation, roads, utilities, parks, and safety issues.</p>
                    <a class="btn btn-primary mt-2" asp-controller="Reports" asp-action="Create">Open</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">View All Reports</h5>
                    <p class="card-text flex-grow-1">See the queue and check your ticket position.</p>
                    <a class="btn btn-outline-secondary mt-2" asp-controller="Reports" asp-action="Index">Open (secondary)</a>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Local Events & Announcements</h5>
                    <p class="card-text flex-grow-1">Stay updated on community events and important announcements.</p>
                    <a class="btn btn-outline-secondary mt-2" asp-controller="Events" asp-action="Index">View Events</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Events & Announcements Section -->
    <div class="row mt-5">
        <div class="col-md-6">
            <h3>Upcoming Events</h3>
            @if (ViewBag.RecentEvents != null && ((IEnumerable<dynamic>)ViewBag.RecentEvents).Any())
            {
                <div class="list-group">
                    @foreach (var evt in ViewBag.RecentEvents)
                    {
                        <div class="list-group-item">
                            <h6 class="mb-1">@evt.Title</h6>
                            <p class="mb-1 small">@evt.Description</p>
                            <small class="text-muted">
                                <strong>Date:</strong> @evt.Date.ToString("MMM dd") |
                                <strong>Location:</strong> @evt.Location
                            </small>
                        </div>
                    }
                </div>
                <a asp-controller="Events" asp-action="Index" class="btn btn-sm btn-outline-primary mt-2">View All Events</a>
            }
            else
            {
                <p class="text-muted">No upcoming events.</p>
            }
        </div>
        
        <div class="col-md-6">
            <h3>Recent Announcements</h3>
            @if (ViewBag.RecentAnnouncements != null && ((IEnumerable<dynamic>)ViewBag.RecentAnnouncements).Any())
            {
                <div class="list-group">
                    @foreach (var announcement in ViewBag.RecentAnnouncements)
                    {
                        <div class="list-group-item">
                            <h6 class="mb-1">@announcement.Title</h6>
                            <p class="mb-1 small">@announcement.Description</p>
                            <small class="text-muted">
                                <strong>Date:</strong> @announcement.Date.ToString("MMM dd") |
                                <span class="badge bg-@(announcement.Priority == "High" ? "danger" : announcement.Priority == "Normal" ? "warning" : "secondary")">@announcement.Priority</span>
                            </small>
                        </div>
                    }
                </div>
                <a asp-controller="Events" asp-action="Index" class="btn btn-sm btn-outline-primary mt-2">View All Announcements</a>
            }
            else
            {
                <p class="text-muted">No recent announcements.</p>
            }
        </div>
    </div>

    <div class="alert alert-info mt-4" role="alert">
        You're making a difference. Thank you for helping improve our city!
    </div>
</div>

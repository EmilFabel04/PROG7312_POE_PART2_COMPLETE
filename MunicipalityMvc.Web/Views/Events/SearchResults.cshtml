@model MunicipalityMvc.Web.Controllers.EventsSearchResultsViewModel
@{
    ViewData["Title"] = "Search Results";
}

<div class="container mt-4">
    <h2 class="mb-4">Search Results</h2>

    @if (Model.Events.Any() || Model.Announcements.Any())
    {
        @if (Model.Events.Any())
        {
            <h3>Events</h3>
            <ul class="list-group mb-4">
                @foreach (var evt in Model.Events)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h5>@evt.Title</h5>
                            <p class="mb-1">@evt.Description</p>
                            <small class="text-muted">@evt.Date.ToString("yyyy-MM-dd") at @evt.Location</small>
                        </div>
                        <a asp-action="EventDetails" asp-route-id="@evt.Id" class="btn btn-primary btn-sm">View</a>
                    </li>
                }
            </ul>
        }

        @if (Model.Announcements.Any())
        {
            <h3>Announcements</h3>
            <ul class="list-group">
                @foreach (var announcement in Model.Announcements)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h5>@announcement.Title</h5>
                            <p class="mb-1">@announcement.Description</p>
                            <small class="text-muted">Published: @announcement.Date.ToString("yyyy-MM-dd")</small>
                        </div>
                        <a asp-action="AnnouncementDetails" asp-route-id="@announcement.Id" class="btn btn-info btn-sm">Read More</a>
                    </li>
                }
            </ul>
        }
    }
    else
    {
        <p>No results found for your search.</p>
    }

    <a asp-action="Index" class="btn btn-secondary mt-3">Back to Events</a>
</div>

<div style="margin-bottom: 60px;"></div>

@model MunicipalityMvc.Web.Controllers.EventsIndexViewModel
@{
    ViewData["Title"] = "Events & Announcements";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Events & Announcements</h1>
            <p>Stay informed about upcoming events and announcements.</p>
        </div>
    </div>

    <!-- search form -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Search Events & Announcements</h5>
                    <form asp-action="Search" method="post">
                        <div class="row">
                            <div class="col-md-3">
                                <input type="text" name="SearchTerm" class="form-control" placeholder="Search..." />
                            </div>
                            <div class="col-md-2">
                                <select name="Category" class="form-control">
                                    <option value="">All Categories</option>
                                    @foreach (var category in Model.EventCategories)
                                    {
                                        <option value="@category">@category</option>
                                    }
                                </select>
                            </div>
                            
                            <div class="col-md-2">
                                <select name="Priority" class="form-control">
                                    <option value="">All Priorities</option>
                                    <option value="High">High</option>
                                    <option value="Normal">Normal</option>
                                    <option value="Low">Low</option>
                                </select>
                            </div>

                            <div class="col-md-2">
                                <input type="date" name="FromDate" class="form-control" placeholder="From Date" />
                            </div>
                            <div class="col-md-2">
                                <input type="date" name="ToDate" class="form-control" placeholder="To Date" />
                            </div>
                            <div class="col-md-1">
                                <button type="submit" class="btn btn-primary w-100">Search</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <h2>Upcoming Events</h2>
            @if (Model.UpcomingEvents.Any())
            {
                <div class="row">
                    @foreach (var evt in Model.UpcomingEvents)
                    {
                        <div class="col-12 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">@evt.Title</h5>
                                    <p class="card-text">@evt.Description</p>
                                    <small class="text-muted">
                                        <strong>Date:</strong> @evt.Date.ToString("MMM dd, yyyy") |
                                        <strong>Location:</strong> @evt.Location
                                    </small>
                                    <div class="mt-2">
                                        <a class="btn btn-sm btn-outline-primary" asp-action="EventDetails" asp-route-id="@evt.Id">View Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No upcoming events.</p>
            }
        </div>

        <div class="col-md-6">
            <h2>Announcements</h2>
            @if (Model.ActiveAnnouncements.Any())
            {
                <div class="row">
                    @foreach (var announcement in Model.ActiveAnnouncements)
                    {
                        <div class="col-12 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">@announcement.Title</h5>
                                    <p class="card-text">@announcement.Description</p>
                                    <small class="text-muted">
                                        <strong>Date:</strong> @announcement.Date.ToString("MMM dd, yyyy") |
                                        <strong>Priority:</strong> @announcement.Priority
                                    </small>
                                    <div class="mt-2">
                                        <a class="btn btn-sm btn-outline-primary" asp-action="AnnouncementDetails" asp-route-id="@announcement.Id">View Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">No active announcements.</p>
            }
        </div>
    </div>

    @if (Model.RecommendedEvents != null && Model.RecommendedEvents.Any())
    {
        <div class="row mt-4">
            <div class="col-md-12">
                <h2>Recommended for You</h2>
                <p class="text-muted">Based on your search history</p>
                <div class="row">
                    @foreach (var evt in Model.RecommendedEvents.Take(3))
                    {
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">@evt.Title</h5>
                                    <p class="card-text">@evt.Description</p>
                                    <small class="text-muted">
                                        <strong>Date:</strong> @evt.Date.ToString("MMM dd, yyyy") |
                                        <strong>Location:</strong> @evt.Location
                                    </small>
                                    <div class="mt-2">
                                        <a class="btn btn-sm btn-outline-primary" asp-action="EventDetails" asp-route-id="@evt.Id">View Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>